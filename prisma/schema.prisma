generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Set this in your .env file
}

model Subscribe {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}

model Quotation {
  quotation_id  String       @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String
  lastName      String
  emailId       String       @unique
  phoneNumber   String
  companyName   String
  businessType  BusinessType
  branchesCount String
  location      String
  product       Product
  requirement   String
  description   String
  createdAt     DateTime     @default(now())
}

model Demo {
  demo_id       String       @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String
  lastName      String
  emailId       String       @unique
  phoneNumber   String
  companyName   String
  businessType  BusinessType
  branchesCount String
  location      String
  product       Product
  requirement   String
  description   String
  createdAt     DateTime     @default(now())
}

model query {
  query_id    String  @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  emailId     String
  phoneNumber String
  companyName String
  product     Product
  description String
}

model Recruitment {
  req_id      String @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  emailId     String @unique
  phoneNumber String
  experience  String
  collegeName String
  Role        Role

}

enum Product {
  RETAIL_SOLUTION
  MANUFACTURING_SOLUTION
  LOGISTICS_SOLUTION
}

enum BusinessType {
  QUICK_SERVICE_RESTAURANTS
  UNIVERSITIES_CAFE
  CINEMA_THEATERS
  CONVENIENCE_STORES
  SHOPPING_MALLS
  SPORT_STADIUM
}

enum Role {
  FULLSTACK_WEB_DEVELOPER
  SALES_EXECUTIVE
  COMPUTER_VISION_ENGINEER
  DEEP_LEARNING
  DIGITAL_MARKETING
  BUSINESS_DEVELOPMENT
}
